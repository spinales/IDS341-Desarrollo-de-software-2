@model IEnumerable<final_proyect.Models.Task>

@{
    ViewData["Title"] = "Tareas";
}

<div class="container mx-auto px-4 sm:px-8">
    <div class="py-8">
        <div class="flex flex-row mb-1 sm:mb-0 justify-between w-full">
            <h2 class="text-2xl leading-tight">
                Tareas Pendientes
            </h2>
            <div class="text-end">
                <form asp-controller="Task" asp-action="Index" method="get" class="flex flex-col md:flex-row w-3/4 md:w-full max-w-sm md:space-x-3 space-y-3 md:space-y-0 justify-center">
                    <div class=" relative ">
                        <input name="SearchString" type="text" id="&quot;form-subscribe-Filter" class=" rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" placeholder="nombre"/>
                        </div>
                        <button class="flex-shrink-0 px-4 py-2 text-base font-semibold text-white bg-purple-600 rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-purple-200" type="submit">
                            Filtrar
                        </button>
                    </form>
                </div>
            </div>
            <a asp-action="Create" class="flex-shrink-0 px-4 py-2 text-base font-semibold text-white bg-purple-600 rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-purple-200">
                Agregar Nueva Tarea
            </a>
            <div class="-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
                <div class="inline-block min-w-full shadow rounded-lg overflow-hidden">
                    <table class="min-w-full leading-normal">
                        <thead>
                            <tr>
                                <th scope="col" class="px-5 py-3 bg-white border-b border-gray-200 text-gray-800  text-left text-md font-normal">
                                    Nombre
                                </th>
                                <th scope="col" class="px-5 py-3 bg-white border-b border-gray-200 text-gray-800  text-left text-md font-normal">
                                    Categoria
                                </th>
                                <th scope="col" class="px-5 py-3 bg-white border-b border-gray-200 text-gray-800  text-left text-md font-normal">
                                    Descripcion
                                </th>
                                <th scope="col" class="px-5 py-3 bg-white border-b border-gray-200 text-gray-800  text-left text-sm uppercase font-normal">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                            <tr>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <div class="flex items-center">
                                        <div class="ml-3">
                                            <p class="text-gray-900 whitespace-no-wrap">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <div class="flex items-center">
                                        <div class="ml-3">
                                            <p class="text-gray-900 whitespace-no-wrap">
                                                @Html.DisplayFor(modelItem => item.Category.Name)
                                            </p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <div class="flex items-center">
                                        <div class="ml-3">
                                            <p class="text-gray-900 whitespace-no-wrap">
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">
                                        Editar
                                    </a> | 
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">
                                        Detalles
                                    </a> | 
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">
                                        Completar
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
