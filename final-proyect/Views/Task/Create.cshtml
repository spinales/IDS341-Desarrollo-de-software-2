@model final_proyect.Models.Task;

@{
    ViewData["Title"] = "Crear Nueva Tarea";
}

<h1 class="p-12 text-xl">Agregar Nueva Tarea</h1>

<div class="my-10 sm:mt-0 m-12 w-2/6">
    <div class="mt-5 md:mt-0 md:col-span-2">
      <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 bg-white sm:p-6">
            <div class="grid grid-cols-6 gap-6">

              <div class="col-span-12">                
                <label asp-for="Name" class="text-gray-700">
                    Nombre
                    <span class="text-red-500 required-dot">*</span>
                </label>
                <input asp-for="Name" type="text" class="rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"/>
              </div>

              <div class="col-span-12">                
                <label asp-for="Description" class="text-gray-700">
                    Descripcion
                    <span class="text-red-500 required-dot">*</span>
                </label>
                <input asp-for="Description" type="text" class="rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"/>
              </div>

              <div class="col-span-12">                
                <label asp-for="CategoryId" class="text-gray-700">
                    Categoria
                    <span class="text-red-500 required-dot">*</span>
                </label>
                <select asp-for="CategoryId" class ="block w-52 text-gray-700 py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500" asp-items="ViewBag.Categorias"></select>
              </div>


            </div>
          </div>
          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Guardar</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="m-8">
    <a asp-action="Index" class="inline-flex items-center px-6 py-3 text-indigo-600 border border-indigo-600 rounded hover:bg-indigo-600 hover:text-white active:bg-indigo-500 focus:outline-none focus:ring">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        <span class="text-sm font-medium">
            Volver a la Lista
        </span>
    </a>
</div>
